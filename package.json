{
  "name": "littlebot",
  "version": "1.3.0",
  "description": "Arc Notion Sidebar â€” desktop assistant with Notion schedule",
  "main": "main.js",
  "author": "stennill",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "version:bump": "node update-version.js"
  },
  "build": {
    "appId": "com.stennill.littlebot",
    "productName": "Arc Notion Sidebar",
    "directories": { "output": "dist" },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "arc-persona.txt",
      "system-prompt.txt",
      "version.json",
      "context-builder.js",
      "memory.js",
      "notion-manager.js",
      "notion-commands.js",
      "notion-service.js",
      "scheduler-service.js",
      "schedule-optimizer.js",
      "event-notifier.js",
      "slack-service.js",
      "arc-tasks.js",
      "renderer/**/*"
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] },
        { "target": "zip", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {}
}
